.recordtxt {
    align-items: center;
    background: #fff;
    display: flex;
    font-size: 30rpx;
    height: 8%;
    text-align: center;
    width: 100%;
}

.input {
    border: 4rpx solid #e5e5e5;
    height: 60%;
    margin-left: 3%;
    text-align: left;
    width: 80%;
}

.button {
    align-items: center;
    background: #ee7200;
    border-radius: 10rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 60%;
    justify-content: center;
    margin: 0 3%;
    width: 18%;
}

.gymClassList {
    height: 100%;
    width: 100%;
}

.scroll-views {
    height: 92%;
    width: 100%;
}

.gymClass {
    background-color: #fff;
    border-radius: 10rpx;
    height: 14%;
    margin: 2% 3% 3%;
    padding: 3% 0;
    width: 94%;
}

.gymclass-list {
    height: 100%;
    width: 100%;
}

.gymclass-head {
    border-bottom: 1px dashed silver;
    display: flex;
    height: 20%;
    padding: 0rpx 3%;
    width: 94%;
}

.lessonName {
    text-align: left;
}

.gymClassDate,.lessonName {
    color: #8b8b8b;
    font-size: 26rpx;
    height: 40rpx;
    width: 50%;
}

.gymClassDate {
    text-align: right;
}

.gymclass-body {
    display: flex;
    height: 60%;
    padding: 0rpx 3%;
    width: 94%;
}

.gymClassName {
    font-size: 36rpx;
    font-weight: 600;
    height: 100%;
    height: auto;
    justify-content: left;
    width: 75%;
}

.gymClass-num,.gymClassName {
    align-items: center;
    display: flex;
}

.gymClass-num {
    height: 100%;
    justify-content: flex-end;
    width: 25%;
}

.stats-true {
    color: #06920b;
}

.stats-false,.stats-true {
    font-size: 36rpx;
    text-align: center;
}

.stats-false {
    color: red;
}

.stats-default {
    color: #ee7200;
    font-size: 36rpx;
    text-align: center;
}

.gymClass-foot {
    border-top: 1px dashed silver;
    height: 20%;
    padding: 0rpx 3%;
    width: 94%;
}

.gymClass-foot,.update-time {
    display: flex;
}

.update-time {
    align-items: center;
    font-size: 28rpx;
    height: 100%;
    justify-content: center;
    width: 100%;
}

.progress {
    border-radius: 10rpx;
    width: 100%;
}

.placeholder-left {
    padding-left: 10rpx;
}