.recordtxt {
    align-items: center;
    background: #fff;
    display: flex;
    font-size: 30rpx;
    height: 8%;
    text-align: center;
    width: 100%;
}

.input {
    border: 4rpx solid #e5e5e5;
    height: 60%;
    margin-left: 3%;
    text-align: left;
    width: 80%;
}

.button {
    align-items: center;
    background: #ee7200;
    border-radius: 10rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 60%;
    justify-content: center;
    margin: 0 3%;
    width: 18%;
}

.gymClassList {
    width: 100%;
}

.scroll-views {
    height: 92%;
    width: 100%;
}

.gymClass {
    background-color: #fff;
    border-radius: 10rpx;
    height: 18%;
    margin: 2% 3% 3%;
    padding: 2% 0;
    width: 94%;
}

.gymclass-head {
    border-bottom: 1px dashed silver;
    display: flex;
    height: 20%;
    padding: 0rpx 3%;
    width: 94%;
}

.lessonName {
    text-align: left;
    width: 55%;
}

.gymClassDate,.lessonName {
    color: #8b8b8b;
    font-size: 26rpx;
    height: 40rpx;
}

.gymClassDate {
    text-align: right;
    width: 45%;
}

.gymclass-body {
    display: flex;
    height: 60%;
    padding: 0rpx 3%;
    width: 94%;
}

.gymClassName {
    font-size: 32rpx;
    font-weight: 600;
    height: 100%;
    height: auto;
    justify-content: left;
}

.gymClass-num,.gymClassName {
    align-items: center;
    display: flex;
    width: 50%;
}

.gymClass-num {
    height: 100%;
    justify-content: flex-end;
}

.statsAmount-num {
    color: #06920b;
    font-size: 60rpx;
    text-align: center;
}

.statsAmount-name {
    color: #06920b;
    font-size: 28rpx;
    text-align: center;
}

.signed-fxg {
    color: #999;
    font-size: 60rpx;
    text-align: center;
}

.signed-null {
    font-size: 28rpx;
    text-align: center;
}

.factAmount-num {
    color: #666;
    font-size: 60rpx;
    text-align: center;
}

.factAmount-name {
    color: #666;
    font-size: 28rpx;
    text-align: center;
}

.gymClass-foot {
    border-top: 1px dashed silver;
    display: flex;
    height: 20%;
    padding: 0rpx 3%;
    width: 94%;
}

.countPercent-name {
    font-size: 28rpx;
    width: 20%;
}

.countPercent-name,.countPercent-progress {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: left;
}

.countPercent-progress {
    width: 80%;
}

.progress {
    border-radius: 10rpx;
    width: 100%;
}